! input.dat

! The input file for running the PARIS code
! Parameters are read using a namelist statement.
! Blank lines and commented lines are ignored.
! Location of the parameters in the list is not important.

&PARAMETERS
                   ! name of the namelist
hypre    = T       ! use of hypre, if false, SOR solver is used
restart  = F       ! T: start from backup of a previous simulation
nBackup  = 45      ! number of time steps between backup writing. Only last two backups are kept.

NSTEP   = 2       ! maximum number of time steps
EndTime = 1.0     ! When to stop simulation

MaxDt   = 1e-1     ! maximum size of time step
dtFlag  = 1        ! 1: fixed dt;  2: fixed CFL
dt      = 1e-1     ! dt in case of dtFlag=1
CFL     = 0.25
MAXERROR= 1d-6     ! Residual for Poisson solver

ITIME_SCHEME = 2   ! time scheme: 1:first order Euler, 2: second order TVD Runge-Kutta

MAXIT   = 20
BETA    = 1.2
                    ! parameters for linear solver

!=================================================================================================
! Output parameters

NOUT    = 2       ! flush the solution every nout time steps
output_format = 2  ! 1:tecplot 2:vtk

out_path = 'out'     ! name of the output directory

ICOut   = F        ! output initial condition
!=================================================================================================
!Grid parameters
npx     = 2
npy     = 2
npz     = 2
                   ! number of processors in x,y,z direction

Nx      = 32
Ny      = 32
Nz      = 32
Ng      = 2
                   ! grid size in x,y,z direction and number of ghost cells

XLENGTH = 1.0
YLENGTH = 1.0
ZLENGTH = 1.0
                   ! domain size in x,y,z direction

xform   = 0.0
yform   = 0.0
zform   = 0.0    ! non-uniformity of grid: 0:uniform; +:clustered at center; -:clustered near ends

read_x   = F       ! read the grid file for x-grid; If true xLength and xform are neglected
read_y   = F
read_z   = F
x_file   = 'xh.dat' !input file for xh (Nx+1 points)
y_file   = 'yh.dat'
z_file   = 'zh.dat'

!=================================================================================================
! Flow parameters

GX      = 0.0
GY      = 0.0
GZ      = 0.0
                   ! Components of the gravity in x,y,z direction

BDRY_COND = 'periodic'    'periodic'    'periodic'
                   ! Type of boundary condition in x,y,z direction: 'wall', 'periodic'

dPdX      = 1.0
dPdY      = 0.0
dPdZ      = 0.0
                   ! Px, Py, Pz: pressure gradients in case of pressure driven channel flow
                   ! Px = (P(xLength)-P(0))/xLength
TWOPHASE= F
                   ! TwoPhase: used for nu_max,min computation.

RHO1    = 1.0
MU1     = 1e-3
                   ! rho1, mu1 : density and viscosity of the matrix phase

RHO2    = 1.0
MU2     = 1e-3
                   ! rho2, mu2 : properties of the drop

NumBubble =  0
                   ! number of bubbles

xyzrad(1, 1)  = 0.5 
xyzrad(2, 1)  = 0.5 
xyzrad(3, 1)  = 0.5 
xyzrad(4, 1)  = 0.25
                   ! Initial bubble size and location

BUOYANCYCASE = 0
                   ! BuoyancyCase : determines what density will be subtracted from the gravity 
                   ! body force.
                   ! 0: rro=0,  1: rro=rho1,  2: rro=rho2,  3: rro=average(rho)
!=================================================================================================

/
! end of the namelist
